<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke 
		        android:width="1dp" 
		        android:color="#F56F6C"/>
		    <corners 
		        android:radius="7dp" />
		
		    <padding 
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp"
		        android:bottom="1dp"/>
		
		    <solid android:color="#F59D9A"/>
		
		</shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke 
		        android:width="1dp" 
		        android:color="#D67676"/>
		    <corners 
		        android:radius="7dp" />
		
		    <padding 
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp"
		        android:bottom="1dp"/>
		
		    <solid android:color="#F59D9A"/>
		
		</shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke 
		        android:width="1dp" 
		        android:color="#D67676"/>
		    <corners 
		        android:radius="7dp" />
		
		    <padding 
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp"
		        android:bottom="1dp"/>
		
		    <solid android:color="#D67676"/>
		
		</shape>
    </item>
</selector>
